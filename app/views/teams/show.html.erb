<h1> Team <%= @team.name %></h1>
<h3>Projects:</h3>
<ul>
	<% @team.projects.each do |project| %>
		<li><%= link_to project.title, project_path(project) %>
	<% end %>
	<li><%= link_to "Add Project", new_team_project_path(@team) %></li>
</ul>
<h3>Members:</h3>
<ul>
	<% @team.users.each do |member| %>
		<li><%= link_to member.name, user_path(member) %>
	<% end %>
	<li><%= link_to "Add Member", new_team_user_path(@team) %></li>
</ul>

<%= link_to "Return to teams index", teams_path %>
<%= link_to "Delete", team_path(@team), :method => :delete%>
<%= link_to "Edit", edit_team_path(@team) %>

